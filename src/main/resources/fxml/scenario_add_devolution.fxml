<AnchorPane prefHeight="382.0" prefWidth="590.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox fx:id="menuBar" alignment="CENTER_RIGHT" prefHeight="29.0" prefWidth="1053.0" style="-fx-background-color: rgba(0,0,0,0.1);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label fx:id="lbSessionDevolution" prefHeight="29.0" prefWidth="210.0" text="Nova Devolução" textFill="WHITE">
                            <padding>
                                <Insets left="8.0" />
                            </padding>
                        </Label>
                    </children>
                </HBox>
                <Button fx:id="btExit" contentDisplay="RIGHT" mnemonicParsing="false" prefHeight="30.0" prefWidth="40.0" styleClass="image-button-close">
                    <graphic>
                        <ImageView fitHeight="10.0" fitWidth="10.0">
                            <image>
                                <Image url="@../img/cross.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
        <Button fx:id="btOk" defaultButton="true" layoutX="271.0" layoutY="167.0" mnemonicParsing="false" text="Concluir" AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="14.0" />
