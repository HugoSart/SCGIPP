        <TextField fx:id="tfSaleId" layoutX="75.0" layoutY="55.0" prefHeight="27.0" prefWidth="210.0" promptText="ID da venda" />
        <TextField fx:id="tfProductId" accessibleRole="TOOL_BAR" layoutX="75.0" layoutY="118.0" prefHeight="27.0" prefWidth="210.0" promptText="ID do produto" />
        <TextField fx:id="tfQuantity" layoutX="72.0" layoutY="191.0" prefHeight="27.0" prefWidth="279.0" promptText="Quantidade a ser reposta no inventário" />
      <DatePicker fx:id="dpDevolutionDay" layoutX="72.0" layoutY="276.0" promptText="Data da devolução" />
      <Label fx:id="lbAlreadyRegistered" layoutX="75.0" layoutY="326.0" text="Devolução já cadastrada" textFill="RED" visible="false" />
    </children>
</AnchorPane>
